<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="common_ui_AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/common_ui_color_primary</item>
        <item name="colorPrimaryDark">@color/common_ui_color_primary_dark</item>
        <item name="colorAccent">@color/common_ui_color_accent</item>
    </style>

    <style name="common_ui_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="common_ui_primary_button" parent="common_ui_button">
        <item name="rippleColor">@color/common_ui_primary_button_pressed</item>
        <item name="android:backgroundTint">@color/common_ui_selector_primary_button_color</item>
        <item name="android:textColor">@color/common_ui_neutral_white</item>
    </style>
</resources>
